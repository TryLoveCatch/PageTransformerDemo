<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_80">


    <TextView
            android:id="@+id/guide_page_item_txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="Title01"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/c_cc000000"
    />

    <TextView
            android:id="@+id/guide_page_item_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/guide_page_item_txt_msg"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dp_15"
            android:gravity="center"
            android:text="msg01"
            android:textStyle="bold"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/c_1a4a79"
    />



    <ImageView
        android:id="@+id/guide_page_item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/guide_page_item_txt_title"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_10"
        android:scaleType="fitCenter"
    />




</RelativeLayout>
